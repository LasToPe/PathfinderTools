@model WebApplication.Models.FeatTreeModel

<environment include="Development">
    <script src="~/js/FeatTree.js"></script>
    <script src="~/lib/neo-async/dist/async.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/FeatTree.min.js"></script>
    <script src="~/lib/neo-async/dist/async.min.js"></script>
</environment>

@foreach (var feat in Model.RootFeats)
{
    <div class="row feat-tree-area">
        <div id="@feat.Name" class="col-md-3 feat-tree-block" onclick="onClick_subtree(this.id)">
            <span class="link-img"><a href="@feat.Link" target="_blank"><img src="~/images/link.png" /></a></span>
            <strong>@feat.Name</strong>
            <span class="glyphicon glyphicon-chevron-down feat-open"></span>
        </div>
    </div>
}
