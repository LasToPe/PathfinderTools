@model WebApplication.Models.FeatTreeModel

<environment include="Development">
    <script src="~/js/FeatTree.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/FeatTree.min.js"></script>
</environment>

<div class="row">
    <div class="col-md-4">
        <div class="form-inline">
            <input id="treeSearchInput" type="text" class="form-control" />
            <input type="submit" class="btn btn-default" value="Search" onclick="searchTree()" />
        </div>
    </div>
</div>

@foreach (var feat in Model.RootFeats)
{
    <div id="@feat.Name.Replace("'", "")" class="row feat-tree-area">
        <div class="col-md-3 feat-tree-block">
            <span class="link-img"><a href="@feat.Link" target="_blank"><img src="~/images/link.png" /></a></span>
            <strong>@feat.Name</strong>
            <span id="@feat.Name.Replace("'", "")_arrow" class="glyphicon glyphicon-chevron-down feat-arrow" onclick='onClick_subtree(this.id)'></span>
        </div>
    </div>
}
